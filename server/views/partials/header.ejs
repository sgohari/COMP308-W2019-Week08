<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Nasir-Week06</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
  
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if(title == "Home") { %>
            <li class="nav-item active"><% } else { %></li>
  
            <li class="nav-item">
              <% } %>
  
              <a class="nav-link" href="/"
                ><i class="fa fa-lg fa-building"></i> Home
                <span class="sr-only">(current)</span></a
              >
            </li>
  
          
            
            <% if(title == "Favourit") { %>
            <li class="nav-item active"><% } else { %></li>
  
            <li class="nav-item">
              <% } %>
  
              <a class="nav-link" href="/favourit"
                ><i class="fa fa-lg fa-heart"></i> My Favourite</a
              >
            </li>

            <li>

          </li>
          
          <% if(typeof displayName == 'string' && displayName) { %>
            <li class="navbar-text">
              <i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %>
            </li>
            <li class="nav-item"><a href="/logout" class="nav-link">
              <i class="fa fa-lg fa-sign-out"></i> Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a href="/login" class="nav-link">
              <i class="fa fa-lg fa-sign-in"></i> Login</a></li>
            <% } %>
            
          </ul>
        </div>
      </nav>